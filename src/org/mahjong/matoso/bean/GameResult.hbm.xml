<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.mahjong.matoso.bean.GameResult" table="GAME_RESULT">
		<id name="id">
			<generator class="increment"/>
		</id>

		<property name="autoCalculate" 				type="boolean" column="AUTO_CALCULATE" />
		
		<property name="scorePlayer1" 				type="integer" column="RESULT_EMA1" />
		<property name="scorePlayer2" 				type="integer" column="RESULT_EMA2" />
		<property name="scorePlayer3" 				type="integer" column="RESULT_EMA3" />
		<property name="scorePlayer4" 				type="integer" column="RESULT_EMA4" />
		
		<property name="pointsPlayer1" 				type="double" column="POINTS_EMA1" />
		<property name="pointsPlayer2" 				type="double" column="POINTS_EMA2" />
		<property name="pointsPlayer3" 				type="double" column="POINTS_EMA3" />
		<property name="pointsPlayer4" 				type="double" column="POINTS_EMA4" />

	</class>
</hibernate-mapping>
